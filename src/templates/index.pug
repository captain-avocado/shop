extends ./base
block head
    title Главная страница
block variables
block content
    header.header
      .logo.header__logo
        a(href="#").logo__link
          img(src="images/logo.png").logo__icon
          .logo__text
            .logo__name дасстрой
            .logo__descr Внимание к деталям
      .contacts.header__contacts
        .contacts__row
          img(src="images/phone.png").contacts__icon
          .contacts__number +7 (800) 555-35-35
        .contacts__row
          .contacts__descr 7 дней в неделю с 9:00 до 19:00
      .cart.header__cart
        .cart__goods
          .cart__num 2
          img(src="images/cart.png").cart__icon
        .cart__descr Ваша корзина
    nav.nav
      ul.menu.nav__list
        li.menu__item 
          a(href="#").menu__link Главная
        li.menu__item
          a(href="#").menu__link Услуги
        li.menu__item
          a(href="#").menu__link Товары
        li.menu__item
          a(href="#").menu__link Бренды
        li.menu__item
          a(href="#").menu__link Доставка и оплата
        li.menu__item 
          a(href="#").menu__link О компании
      .search-row.nav__search-row
          img(src="images/search-black.png").search-row__icon
          input(type="text", placeholder="Введите ключевое слово").search-row__input
          button(type="submit").search-row__btn#search Поиск
      .search.nav__search
        a(href="#").search__link#open
          img(src="images/search.png").search__icon
        a(href="#").search__link#close
            img(src="images/close.png").search__icon
    script(src="scripts/main.bundle.js")
